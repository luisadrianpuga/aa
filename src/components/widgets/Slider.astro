---
import { Icon } from 'astro-icon';

interface Item {
  title: string;
  description: string;
  imageUrl: string;
}

export interface Props {
  title: string;
  subtitle: string;
  items: Array<Item>;
}

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  items = [],
} = Astro.props;
---
<section class="relative">
  <div class="relative max-w-7xl dark:bg-slate-800 mx-auto px-4 sm:px-6">
    <div class="dark:bg-slate-800 py-4 pt-8 sm:py-6 lg:py-8 lg:pt-12">
      <div class="grid gap-6 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-2 my-12 dark:text-white items-stretch">
        {
          items.map(({ title, description, imageUrl }) => (
            <div class="dark:bg-slate-800 rounded-xl shadow-md overflow-hidden mr-4 mt-3">
              <div class="relative">
                <img
                  src={imageUrl}
                  alt={title}
                  style="width: 100%; height: 100%; object-fit: cover;"
                />
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
